# Monlam MinIO Configuration
MINIO_ENDPOINT=s3.monlam.ai
MINIO_ACCESS_KEY=monlam
MINIO_SECRET_KEY=ScL4mottIF1zDp8RLy9m8s2UafLgqIiw
MINIO_SECURE=true
MINIO_VERIFY_SSL=false

# Alternative: Use Tailscale for faster access (if connected)
# MINIO_ENDPOINT=s3.monlam.local
